{
  "name": "eth-btc-surveillance",
  "version": "0.1.0",
  "main": "./lib/index.js",
  "author": "tankbottoms",
  "license": "",
  "keywords": [
    "bitcoin",
    "ethereum",
    "blocks",
    "transactions",
    "mempool",
    "smart contracts"
  ],
  "engines": {
    "node": "<=v14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/"
  },
  "scripts": {
    "expand-node-memory": "export NODE_OPTIONS=--max_old_space_size=4096",
    "clean:all": "[ -d ./lib ] && rimraf ./lib ./node_module ./tsconfig.tsbuildinfo ./yarn.lock || echo nothing to clean",
    "clean": "[ -d ./lib ] && rimraf ./lib || echo nothing to clean",
    "clean:jobs": "rimraf .current_job.json; rimraf .job_history.json; echo touch .current_job.json && echo touch .job_history.json",
    "clean:logs": "rimraf *.log",
    "build:only": "tsc && echo generated files: $(tree ./lib | wc -l)",
    "build:clean": "yarn clean && tsc",
    "prettier": "prettier --config .prettierrc.json 'src/**/*.ts' --write",
    "lint": "eslint \"src/**/*\"",
    "env-gen": "ts-node ./src/utils/dotenv.test.ts",
    "git": "yarn env-gen && git add . && echo Enter commit message && read && git commit -m \":octocat: ${REPLY}\" && git push",
    "changelog:patch": "./node_modules/.bin/generate-changelog -p",
    "changelog:minor": "./node_modules/.bin/generate-changelog -m",
    "changelog:major": "./node_modules/.bin/generate-changelog -M",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version major && git push origin && git push origin --tags",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version minor && git push origin && git push origin --tags",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version patch && git push origin && git push origin --tags",
    "prepare": "husky install",
    "build": "yarn build:wasm && rm -rf lib && tsc -b && yarn build:signatures",
    "build:wasm": "wasm-pack build --target nodejs --release src/wasm/ethabi",
    "build:signatures": "ts-node scripts/buildsigs.ts"
  },
  "dependencies": {
    "@bitauth/libauth": "^1.18.1",
    "@ethercast/eth-jsonrpc-client": "^1.2.1",
    "@ethercast/etherscan-client": "^1.0.1",
    "@mempool/mempool.js": "^2.2.2",
    "@mycrypto/eth-scan": "^3.4.4",
    "@oclif/command": "^1.8.0",
    "abort-controller": "^3.0.0",
    "agentkeepalive": "^4.1.4",
    "archiver": "^5.3.0",
    "async": "^3.2.0",
    "axios": "^0.24.0",
    "bignumber.js": "^9.0.1",
    "bl": "^5.0.0",
    "bn.js": "^5.2.0",
    "bottleneck": "^2.19.5",
    "changelog": "^1.4.2",
    "datejs": "^1.0.0-rc3",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "ethers": "^5.4.4",
    "fetch-retry": "^4.1.1",
    "find-up": "^5.0.0",
    "fs-extra": "^10.0.0",
    "global": "^4.4.0",
    "http-proxy-agent": "^5.0.0",
    "https-proxy-agent": "^5.0.0",
    "isomorphic-fetch": "^3.0.0",
    "isomorphic-unfetch": "^3.1.0",
    "js-yaml": "^4.1.0",
    "jszip": "^3.7.1",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "mongodb": "^4.1.3",
    "node-cron": "^3.0.0",
    "rpc-bitcoin": "^2.0.0",
    "rpc-request": "^5.0.3",
    "web3": "^1.5.0",
    "web3-core": "^1.5.0",
    "winston": "^3.3.3",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@types/archiver": "^5.1.1",
    "@types/async": "^3.2.7",
    "@types/bl": "^5.0.2",
    "@types/bn.js": "^5.1.0",
    "@types/datejs": "^0.0.31",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/js-yaml": "^4.0.4",
    "@types/jszip": "^3.4.1",
    "@types/node": "^16.4.6",
    "@types/node-cron": "^2.0.4",
    "@types/node-fetch": "^3.0.3",
    "@types/yargs": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.1",
    "eventemitter3": "^4.0.7",
    "generate-changelog": "^1.8.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.1",
    "nodemon": "^2.0.12",
    "prettier": "2.3.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typechain": "^5.1.2",
    "typescript": "^4.3.5"
  },
  "types": "./typings/index.d.ts",
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write --ignore-unknown",
      "git add"
    ],
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "snyk": true,
  "packageManager": "yarn@3.1.0"
}